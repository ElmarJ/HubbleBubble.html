{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "removeComments": true,
    "module": "esnext",
    "outDir": "./js",
    "rootDir": "./src",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,

  },
  "typeAcquisition": {
    "enable": true,
    "include": [
      "gapi",
      "firebase"
    ]
  }
}
