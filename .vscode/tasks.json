            "script": "build",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "serve",
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true
        },
        {
            "type": "npm",
            "script": "deploy",
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
