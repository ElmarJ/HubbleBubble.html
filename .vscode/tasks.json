{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy",
            "command": "firebase",
            "args": [
                "deploy --only hosting"
            ],
            "dependsOn": [
                "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "watch",
            "type": "typescript",
            "tsconfig": "public\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true
        },
        {
            "label": "build",
            "type": "typescript",
            "tsconfig": "public\\tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "serve",
            "type": "npm",
            "script": "serve",
            "path": "public/",
            "problemMatcher": [],
        }
    ]
}