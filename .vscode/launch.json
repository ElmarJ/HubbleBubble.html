{
    "version": "2.0.0",
    "configurations": [

        {
            "name": "Launch chrome localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000/index.html",
            "webRoot": "${workspaceRoot}/public",
            "skipFiles": [
                "**/bower_components",
                "**/node_modules",
                "__/**/*"
            ],
            "smartStep": true,
            "preLaunchTask": "serve.public"
        },
        {
            "name": "Launch chrome localhost with debugging firebase source",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000/index.html",
            "webRoot": "${workspaceRoot}/public",
            "skipFiles": [
                "**/bower_components",
                "**/node_modules"
            ],
            "smartStep": true
        },
        {
            "name": "Launch chrome maintenance page (localhost)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000/maintenance.html",
            "webRoot": "${workspaceRoot}/public",
            "skipFiles": [
                "**/bower_components",
                "**/node_modules",
                "/__/**"
            ]
        },
        {
            "name": "Launch localhost in Microsoft Edge (Chromium) Canary",
            "type": "edge",
            "request": "launch",
            "version": "dev",
            "url": "http://localhost:5000/index.html",
            "webRoot": "${workspaceRoot}/public",
            "skipFiles": [
                "**/bower_components",
                "**/node_modules",
                "__/**/*"
            ],
            "smartStep": true,
            "preLaunchTask": "serve.public"
        }
    ]
}