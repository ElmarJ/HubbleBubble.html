{
    "version": "0.2.0",
    "configurations": [{
            "name": "Launch chrome localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000/index.html",
            "webRoot": "${workspaceRoot}/public",
            "skipFiles": [
                "**/bower_components",
                "**/node_modules",
                "/__/**"
            ],
            "preLaunchTask": "build"
        },
        {
            "name": "Launch chrome maintenance page (localhost)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000/maintenance.html",
            "webRoot": "${workspaceRoot}/public",
            "skipFiles": [
                "**/bower_components",
                "**/node_modules",
                "/__/**"
            ],
            "preLaunchTask": "build"
        },
        {
            "name": "Launch chrome index.html",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": false,
            "file": "${workspaceRoot}/index.html",
            "preLaunchTask": "build"
        },
        {
            "name": "Launch edge localhost",
            "type": "edge",
            "request": "launch",
            "url": "http://localhost:5000/index.html",
            "webRoot": "${workspaceRoot}/public",
            "preLaunchTask": "build"
        },
        {
            "name": "Launch edge index.html",
            "type": "edge",
            "request": "launch",
            "sourceMaps": false,
            "file": "${workspaceRoot}/index.html",
            "preLaunchTask": "build"
        }
    ]
}