{
    "version": "0.2.0",
    "configurations": [{
            "name": "Launch chrome localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000/index.html",
            "webRoot": "${workspaceRoot}/public",
            "skipFiles": [
                "**/bower_components",
                "**/node_modules",
                "__/**/*"
            ],
            "preLaunchTask": "build",
            "smartStep": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "*",
                "webpack:///./*": " ${webRoot}/*",
                "webpack:///src/*": "${webRoot}/*",
                "webpack:///./~/*": "${webRoot}/node_modules/*"
            }
        },
        {
            "name": "Launch chrome localhost with debugging firebase source",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000/index.html",
            "webRoot": "${workspaceRoot}/public",
            "skipFiles": [
                "**/bower_components",
                "**/node_modules",
            ],
            "preLaunchTask": "build",
            "smartStep": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "*",
                "webpack:///./*": " ${webRoot}/*",
                "webpack:///src/*": "${webRoot}/*",
                "webpack:///./~/*": "${webRoot}/node_modules/*",
                "/src/*": "C:/Users/Elmar/Source/Repos/firebase-js-sdk/src/*"
            }
        },
        {
            "name": "Launch chrome maintenance page (localhost)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000/maintenance.html",
            "webRoot": "${workspaceRoot}/public",
            "skipFiles": [
                "**/bower_components",
                "**/node_modules",
                "/__/**"
            ],
            "preLaunchTask": "build"
        }
    ]
}